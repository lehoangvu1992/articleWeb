<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div class="error-messages text-danger bg-danger">
      <h3>Có <%= @article.errors.count %> lỗi xảy ra, vui lòng kiểm tra lại dữ liệu nhập:</h3>
      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, 'Tiêu đề' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category, 'Danh mục' %>
    <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] }, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, 'Nội dung' %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'Đăng bài', class: 'btn btn-default center-block' %>
  </div>
<% end %>
